<h1>Awards</h1>

<br>
<% if current_user && current_user.admin? %>
  <h3>Create an Award</h3>
  <%= form_for Award.new do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %>

    <%= f.submit %>
  <% end %>
<% end %>
<br>

<% @awards.each do |award| %>
  <%= link_to "#{award.title}", award_path(award) %>
  <br>
<% end %>